
<workflow-app
    xmlns="uri:oozie:workflow:0.1" name="GWPC CI Data Ingestion">
    <start to="GWPC_INGESTION_CI_LOAD"/>
       <join name="GWPC_STAGING_LOADS_COMPLETE" to="END"/>
         <fork name="TRIGGER_STAGING_LOADS">
                <path start="GWPC_STAGING_LOAD"/>
                <path start="GWPC_SECURED_STAGING_LOAD"/>
         </fork>
        <action name="GWPC_INGESTION_CI_LOAD">
        <ssh xmlns="uri:oozie:ssh-action:0.1">
        <host>${focusNodeLogin}</host>
        <command>${spark_run_script_path_ci}</command>
        <args></args>
        </ssh>
        <ok to="GWPC_INGESTION_DELETE_LOAD"/>
        <error to="GWPC_INGESTION_CI_LOAD_FAILURE"/>
        </action>
     <action name="GWPC_INGESTION_DELETE_LOAD">
        <ssh xmlns="uri:oozie:ssh-action:0.1">
        <host>${focusNodeLogin}</host>
        <command>${spark_run_script_path_delete}</command>
        <args></args>
        </ssh>
        <ok to="TRIGGER_STAGING_LOADS"/>
        <error to="GWPC_INGESTION_DELETE_LOAD_FAILURE"/>
    </action>
    <action name="GWPC_STAGING_LOAD">
        <ssh xmlns="uri:oozie:ssh-action:0.1">
        <host>${focusNodeLogin}</host>
        <command>${spark_run_script_path_staging}</command>
        <args></args>
        </ssh>
        <ok to="GWPC_STAGING_LOADS_COMPLETE"/>
        <error to="GWPC_STAGING_LOAD_FAILURE"/>
    </action>
        <action name="GWPC_SECURED_STAGING_LOAD">
        <ssh xmlns="uri:oozie:ssh-action:0.1">
        <host>${focusNodeLogin}</host>
        <command>${spark_run_script_path_secured_staging}</command>
        <args></args>
        </ssh>
        <ok to="GWPC_STAGING_LOADS_COMPLETE"/>
        <error to="GWPC_SECURED_STAGING_LOAD_FAILURE"/>
        </action>

        <action name="GWPC_INGESTION_CI_LOAD_FAILURE">
        <email xmlns="uri:oozie:email-action:0.1">
        <to>edfdatalake@stateauto.com</to>
        <subject>GWPC PRODUCTION Daily ingestion - CI load failure notification</subject>
        <body>GWPC PRODUCTION Daily ingestion - CI load failure notification</body>
        </email>
        <ok to="END"/>
        <error to="KILL"/>
        </action>

        <action name="GWPC_INGESTION_DELETE_LOAD_FAILURE">
        <email xmlns="uri:oozie:email-action:0.1">
        <to>edfdatalake@stateauto.com</to>
        <subject>GWPC PRODUCTION Daily ingestion - Delete Batch load failure notification</subject>
        <body>GWPC PRODUCTION Daily ingestion - Delete Batch load failure notification</body>
        </email>
        <ok to="END"/>
        <error to="KILL"/>
        </action>

        <action name="GWPC_STAGING_LOAD_FAILURE">
        <email xmlns="uri:oozie:email-action:0.1">
        <to>edfdatalake@stateauto.com</to>
        <subject>GWPC PRODUCTION Daily - Staging load failure notification</subject>
        <body>GWPC PRODUCTION Daily - Staging load failure notification</body>
        </email>
        <ok to="GWPC_STAGING_LOADS_COMPLETE"/>
        <error to="KILL"/>
        </action>

        <action name="GWPC_SECURED_STAGING_LOAD_FAILURE">
        <email xmlns="uri:oozie:email-action:0.1">
        <to>edfdatalake@stateauto.com</to>
        <subject>GWPC PRODUCTION Daily secured staging load failure notification</subject>
        <body>GWPC PRODUCTION Daily secured staging load failure notification</body>
        </email>
        <ok to="GWPC_STAGING_LOADS_COMPLETE"/>
        <error to="KILL"/>
        </action>
    <kill name="KILL">
        <!-- <message>"Killed job due to error"</message> -->
        <message>GWPC PRODUCTION Staging load failed while sending the failure notifiaction </message>
    </kill>
    <end name="END" />

</workflow-app>

	